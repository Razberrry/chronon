{
  "name": "chronon-timeline",
  "description": "React timeline component library.",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rzplg/chronon-timeline.git"
  },
  "keywords": [
    "react",
    "timeline",
    "scheduler",
    "calendar",
    "gantt-timeline",
    "chronon-timeline",
    "gantt-chart",
    "compositon-pattern"
  ],
  "type": "module",
  "main": "./dist/chronon-timeline.cjs.js",
  "module": "./dist/chronon-timeline.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/chronon-timeline.es.js",
      "require": "./dist/chronon-timeline.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && vite build && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "vite --clearScreen false",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "es-toolkit": "^1.40.0",
    "nanoid": "^5.1.6"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-virtuoso": "^4.14.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtuoso": "^4.14.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  }
}
