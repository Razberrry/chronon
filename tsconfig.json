{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es2021"
  },
  "include": ["src"]
}
